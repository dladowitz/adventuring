<br>
<br>
<strong><%= @org.name %></strong>
<br>
Description:
<%= @org.description %>
<br>
Website:
<%= @org.website %>
<br>
Phone:
<%= @org.phone_num %>
<br>

<% if current_user.site_admin? %>
  (owner: <%= @org.owner.name ? @org.owner.name : @org.owner.email %>)
<% end %>


<br>
<br>
<% @org.courses.each do |course| %>
  <strong>Course Name:</strong>
  <%= link_to course.name, organization_course_path(@org.id, course) %>
  <br>
  Description:
  <%= course.description %>
<br>
<br>
<% end %>

<% if current_user == @org.owner || current_user.site_admin? %>
  <span>
    <%= button_to 'Add a course', new_organization_course_path(@org.id), :method => :get%>
    <%= button_to 'Edit Organization', edit_organization_path(@org.id), :method => :get%>
    <%= button_to 'Delete Organization', pre_destroy_organization_path(@org.id), :method => :get, :confirm => "Are you sure?"%>
   </span>
<% end %>


