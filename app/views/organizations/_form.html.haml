= form_for @organization do |f|
  %table
  = f.error_messages
  %tr
    %td= f.label :name, 'Organization Name'
    %td= f.text_field :name, :placeholder => "#{@organization.name}"

    %div
      = f.label :description
      = f.text_area :description, :rows => 4, :class => 'ckeditor'

  %table
    %tr
      %td= f.label :website
      %td= f.text_field :website

    %tr
      %td= f.label :phone_num
      %td= f.text_field :phone_num

    %tr
      %td= f.label :logo
      %td= f.file_field :logo

    %tr
      %td= f.submit



