<%= form_for [@org, @course], :html => { :class => "form-horizontal"} do |f| %>

  <%= f.error_messages %>
  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area(:description, :rows => 4) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :price, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :price %>
    </div>
  </div>

    <%= f.hidden_field :organization_id, value: params[:organization_id] %>

  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
    </div>
  </div>



<% end %>




