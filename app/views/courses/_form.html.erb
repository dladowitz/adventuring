<%= form_for ([@org, @course]) do |f| %>
  <table>
  <%= f.error_messages %>
  <tr>
    <td><%= f.label :name %>:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :description %>:</td>
    <td><%= f.text_area(:description, :rows => 4) %></td>
  </tr>
  <tr>
    <td><%= f.label :price %>:</td>
    <td><%= f.text_field :price %></td>
  </tr>
  <tr>
    <td><%= f.hidden_field :organization_id, value: params[:organization_id] %></td>
  </tr>
  <tr>
    <td><%= f.submit %></td>
  </tr>

  </table>
<% end %>
